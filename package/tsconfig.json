{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./client/*"],
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.vue"],
}
